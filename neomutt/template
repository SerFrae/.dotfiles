unmailboxes *
set ssl_starttls = yes
set ssl_force_tls = yes
set send_charset = "us-ascii:utf8"
set imap_pass = "<password>"
set imap_user = "<email>"
set smtp_url = "smtp://$imap_user:$imap_pass@localhost:1025"
set folder = "imap://localhost:1143"
set spoolfile = "+Inbox"
set postponed = "+[Proton]/Drafts"
set mbox = "+[Proton]/All Mail"
set header_cache = "~/.cache/neomutt/headers"
set message_cachedir = "~/.cache/neomutt/bodies"
set certificate_file = "~/.local/share/neomutt/certificates"
set smtp_authenticators = "gssapi:login"
set imap_keepalive = 900
set from = "<email>"
set use_from = yes
unset use_domain
