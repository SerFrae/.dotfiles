### Hotkeys {{{

#Terminal
super + Return
    alacritty
#Terminal + Tmux
super + shift + Return
    alacritty -e $SHELL -i -c tmux &
#Program Launcher
super + d
	rofi -show drun -m -1 -sidebar-mode -config $XDG_CONFIG_HOME/rofi/config.rasi
#Run
#super + shift + d
#    rofi -show run -m -1 -side-mode -config $XDG_CONFIG_HOME/rofi/config.rasi
#Task Switcher
super + shift + d
	rofi -show window -m -1 -side-mode -config $XDG_CONFIG_HOME/rofi/config.rasi
#Ssh
#alt + shift + d
#	rofi -show ssh -m -1 -side-mode -config $XDG_CONFIG_HOME/rofi/config.rasi
#Screenshot
super + z
    maim -u | xclip -selection clipboard -t image/png; \
    notify-send "Screenshot Saved to Clipboard."
super + shift + z
    maim -u $HOME/media/images/screenshots/scrn-$(date +"%Y-%m-%d-%H-%M-%S").png; \
		notify-send "Screenshot Saved: scrn-$(date +"%Y-%m-%d-%H-%M-%S").png"
#Screenclip
super + x
    maim -s -u | xclip -selection clipboard -t image/png; \
    notify-send "Screenclip Saved to Clipboard."
super + shift + x
    maim -s -u $HOME/media/images/screenshots/scrn-$(date +"%Y-%m-%d-%H-%M-%S").png; \
    notify-send "Screenclip Saved: scrn-$(date +"%Y-%m-%d-%H-%M-%S").png"
#Lock
super + grave
	betterlockscreen -l dimblur
#Logout
super + shift + grave
	bspc quit
#Restart
alt + grave
	systemctl reboot
#Shutdown
alt + shift + grave
	systemctl poweroff
#Sxhkd Config Reload
super + space; z
	pkill -USR1 -x sxhkd; \
	sleep 0.2; \
	notify-send 'Sxhkd Reloaded'
#Restart Bspwm
super + space; x
	bspc {wm -r}; \
	sleep 0.5; \
	notify-send 'Bspwm Restarted'
#Close & Kill
super + {_,shift +}q
	bspc node -{c,k}
alt + F4
	bspc node -k
# }}}
### Desktops {{{

#Focus/Send Node (to) Desktop(n)
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}
#Send Node & Follow to Desktop(n)
super + ctrl + {1-9,0}
	bspc node -d ^{1-9,10} --follow
#Summon Nodes From Desktop(n) to Focused Desktop
#Shift = Send Nodes from Focused Desktop to Desktop(n)
alt + {_, shift + }{1-9,0}
	bspwm_multinode {--ds, --db} ^{1-9,10}
alt + ctrl + {1-9,0}
	bspwm_multinode --dsnf ^{1-9,10}
#Close/Kill Nodes in Focused Desktop
#Excludes Focused or Marked Nodes
alt + shift + q
	bspwm_multinode --{close}-all-local-non-focused
alt + shift  + F4
	bspwm_multinode --{kill}-all-local-non-focused
#Focus Next/Previous Window
alt + {_,shift} + Tab
	bspc node -f {next,prev}
#Focus Next/Previous Desktop
super + {_,shift} + Tab
	bspc desktop -f {next,prev}
#Focus/Move Window to the Biggest Space
super + {_,shift} + semicolon
#Hide All Non-Focused
	bspc node -{s,f} biggest.local
#Swap Window With Last Window
super + {_, shift} + apostrophe
	bspc node -{s,f} last
#Focus Node in Given Direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}
#Move Node in Given Direction
super + shift + {h,j,k,l}
	bspwm_move {west,south,north,east}
# }}}
### Layout{{{

#Rotate Desktop
super + {_,shift + }r
	bspc node @/ --rotate {90,-90}
#Circulate Leaves
super + {_,shift + }c
	bspc node @/ --circulate {backward,forward}
#Make Split Ratios Equal
super + equal
	bspc node @/ --equalize
#Make Split Ratios Balanced
super + minus
	bspc node @/ --balance
#Flip Layout Vertically/Horizontally
super + {_,shift + }v
	bspc node @/ --flip {horizontal,vertical}
#Insert Receptacle
super + s
	bspc node -i
#Send to Preselection/Receptacle
super + {_,shift + }e
	{bspwm_presel, bspc node -n 'last.!automatic.local'}
#Kill/Remove First Matching Receptacle from the Current Desktop.
#Ctrl = Kill All.
super + {shift + , ctrl + }s
	{ \
	bspc node 'any.leaf.!window.local' -k, \
	bspwm_multinode --kill-all-receptacles \
	}
#Focus Node for Preselection
super + {m,comma,period,slash}
	bspc node -f @{parent,brother,first,second}
# }}}
### Node State{{{

#Hide Node
super + w
	bspwm_hide --nh
#Unhide Most Recent Node
super + shift + w
	bspwm_hide --nur
#Unhide Oldest Node
super + ctrl + w
	bspwm_hide --nuo
#Hide All Non-Focused
alt + w
    bspwm_hide --nhnf
#Hide All Local
alt + shift + w
    bspwm_hide --nha
#Unhide All Global
alt + ctrl + w
    bspwm_hide --nua
#Unhide All Local
super + a
		bspwm_hide --nlu
#Summon all marked
super + shift + a
		bspwm_multinode --nms
#Force Unhide Global (Also resets node file)
super + ctrl + a
		bspwm_hide --nfu
#Toggle Node Tiling
super + t
	bspc query --nodes -n focused.tiled && state=floating || state=tiled; \
	bspc node --state \~$state
#Toggle Node Pseudo-Tiling
super + shift + t
	bspc node --state \~pseudo_tiled
#Toggle Node Fullscreen
super + f
	bspc node --state \~fullscreen
#Toggle Monocle
super + b
	bspc desktop -l next
#Set Node Flag
super + {u,p,o,i}
	bspc node -g {sticky,private,locked,marked}
# }}}
### Pre-Select{{{

#Preselect Direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
#Preselect Ratio
super + space; {1-9}
	bspc node -o 0.{1-9}
#Cancel Focused Node Preselection
super + ctrl + space
	bspc node -p cancel
#Cancel Focused Desktop Preselection
super + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel
# }}}
### Multimedia{{{

#Audio
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
XF86AudioPlay
	playerctl play-pause @DEFAULT_SOURCE@
XF86AudioNext
	playerctl next @DEFAULT_SOURCE@
XF86AudioPrev
	playerctl prev @DEFAULT_SOURCE@
#Brightness
XF86MonBrightnessDown
    xbacklight -dec 5
XF86MonBrightnessUp
    xbacklight -inc 5
# }}}
### Resize{{{

#Resize
alt + {h,j,k,l}
    bspwm_resize {west,south,north,east} 20
#Move Float
super + space: super + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
#Adjust Gaps
super + bracket{right,left}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5))# }}}
