auto-reload yes
reload-time 30
reload-threads 10
browser "firefox-developer-edition %u"
notify-always no
notify-program "/usr/bin/notify-send"
notify-format "RSS: %d new articles (%n unread articles, %f unread feeds)"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

include ~/.config/newsboat/dark
