{
	"title": "Hyper Colon",
	"rules": [
		{
			"description": "Semicolon if no keychord, else Hyper",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "semicolon",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "right_shift",
							"modifiers": [
								"right_command",
								"right_control",
								"right_option"
							],
							"lazy": true
						}
					],
					"to_if_alone": [
						{
							"key_code": "semicolon"
						}
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "semicolon",
						"modifiers" : 
							[
								"left_shift"
							]
					},
					"to": [
						{
							"key_code": "colon"
						}
					]
				}
			]
		}
	]
}
